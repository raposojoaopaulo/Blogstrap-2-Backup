<%= simple_form_for article do |form| %>
  
  <%= form.input :title %>
  <%= form.input :body, input_html: {rows: 10} %>
  <%= form.association :category, collection: Category.sorted, prompt: "Choose a Category..." %>

  <br>

  <p>  
  <%= form.button :submit, class: "btn btn-success" %>
  </p>
  
<% end %>