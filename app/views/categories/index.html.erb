<p style="color: green">

<h1>Categories</h1>

<p><%= link_to "New category", new_category_path, class: "btn btn-primary" %><p>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>  
        <td><%= category.name %></td>
        <td>
          <%= link_to "Show this category", category, class: "btn btn-link" %>
        <td>
      </tr>
    <% end %>
  <tbody>
</table>

<p><%= link_to "Back", articles_path, class: "btn btn-secondary" %></p>

